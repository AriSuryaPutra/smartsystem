<!-- modal -->
<div class="modal fade" tabindex="-1" role="dialog" id="copylink">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Generate Token
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <input type="text" class="form-control" id="textcopy" readonly>
        </div>
        <div class="modal-footer bg-whitesmoke br">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" onclick="copyTeks()" class="btn btn-success"><i class="fa fa-copy"></i> Copy Link</button>
        </div>
        </div>
    </div>
</div>
<script>
    function generatetoken(token) {
        console.log(token);
        document.getElementById("textcopy").value = '<%= process.env.URL %>/auth/login/onetaps/'+token;
    }
    function copyTeks(){ 
        var containerid = 'textcopy';
        if (document.selection) {
            var range = document.body.createTextRange();
            range.moveToElementText(document.getElementById(containerid));
            range.select().createTextRange();
            document.execCommand("copy");
        } else if (window.getSelection) {
            var range = document.createRange();
            range.selectNode(document.getElementById(containerid));
            window.getSelection().addRange(range);
            document.execCommand("copy");
            alert("text copied, paste using Ctrl+V")
        }
    }
</script>
<!-- END MODAL -->