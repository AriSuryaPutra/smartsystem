<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../../../views/templates/header.ejs %>
  </head>
  <body class="">
    <div id="app">
      <div class="main-wrapper">
        <%- include ../../../views/templates/navtop.ejs %> 
        <%- include ../../../views/templates/navleft_user.ejs %>
        <div class="main-content" style="padding-top: 90px">
          <section class="section">
            <div class="section-header">
              <h1><a href="/enews" class="text-black"><b>E-News</b></a></h1>
              <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active">
                  <a href="#">Dashboard</a>
                </div>
                <div class="breadcrumb-item"><a href="/enews"><b>E-News</b></a></div>
              </div>
            </div>

            <div class="section-body">
              <h2 class="section-title">
                <%= datarow.judul_enews %>
              </h2>
              <input type="hidden" name="sumber" id="sumber" value="/assets/e-news/<%= datarow.location_enews %>">
              <script src="https://mozilla.github.io/pdf.js/build/pdf.js"></script>
              <div>
                <button class="btn btn-xs btn-outline-secondary btn-round" id="prev">Previous</button>
                <button class="btn btn-xs btn-outline-secondary btn-round" id="next">Next</button>
                &nbsp; &nbsp;
                <span>Page: <span id="page_num"></span> / <span id="page_count"></span></span>
              </div>
              <canvas id="the-canvas"></canvas>
            </div>
          </section>
        </div>
        
        <!-- modal -->
        <div class="modal fade" tabindex="-1" role="dialog" id="exampleModal1">
          <div class="modal-dialog modal-lg p-0" role="document">
            <div class="modal-content m-0 p-0">
              <div class="modal-header p-0">
                  <button type="button" class="close mr-1" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <div class="modal-body p-0" style="height: 600px;">
                <embed id="fileEnews" src="" type="application/pdf" height="100%" width="100%">/>
              </div>
            </div>
          </div>
        </div>
        <%- include ../../../views/templates/footer.ejs %>
      </div>
    </div>
    <%- include ../../../views/templates/script.ejs %>
    <%- include ../../../views/templates/scriptpdf.ejs %>
    <script>
      $(document).on("click", "#m", function () {
          var myBookId = $(this).data('id');
          $(".modal-body #fileEnews").removeAttr('src');
          $(".modal-body #fileEnews").attr('src', '/assets/e-news/'+myBookId);
      });
    </script>
  </body>
</html>
