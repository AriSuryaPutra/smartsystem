<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../../../views/templates/header.ejs %>
    <!-- Template CSS -->
    <link rel="stylesheet" href="<%= process.env.URL %>/script-stisla/assets/css/style.css" />
    <link rel="stylesheet" href="<%= process.env.URL %>/script-stisla/assets/css/components.css" />
</head>

<body>
  <div id="app">
    <div class="main-wrapper">
      <%- include ../../../views/templates/navtop.ejs %>
        <%- include ../../../views/templates/navleft.ejs %>
          <div class="main-content">
            <section class="section">
              <div class="section-header">
                <h1>Import Progress Status</h1>
                <div class="section-header-breadcrumb">
                  <div class="breadcrumb-item active">
                    <a href="#">Import</a>
                  </div>
                  <div class="breadcrumb-item">Progress Status</div>
                </div>
              </div>

              <div class="section-body">
                <div class="row">
                  <div class="col-12">
                    <div class="card">
                      <div class="card-header">
                        <h4>Upload Excel</h4>
                      </div>
                      <div class="card-body">
                        <% if(alert.status !='200' && alert.status !='' ) { %>
                          <div class="alert alert-danger">
                            <div class="alert-title">
                              <%= alert.status %>
                            </div>
                            <%= alert.message %>
                          </div>
                          <% } %>
                            <% if(alert.status=='200' && alert.status !='' ) { %>
                              <div class="alert alert-success">
                                <div class="alert-title">
                                  <%= alert.status %>
                                </div>
                                <%= alert.message %>
                              </div>
                              <% } %>
                                <h5>Last Update : <%= last %>
                                </h5>
                                <form enctype="multipart/form-data" method="POST"
                                  action="<%= process.env.URL %>/progress-status/upload">
                                  <div class="form-group row">
                                    <div class="col-sm-12">
                                      <div>
                                        <input type="file" name="file" />
                                      </div>
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <div class="col-sm-12 text-right">
                                      <button type="submit" class="btn btn-primary">
                                        Import Data
                                      </button>
                                    </div>
                                  </div>
                                </form>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12">
                    <div class="card">
                      <div class="card-header">
                        <h4>
                          <%= tbtitle %>
                        </h4>
                      </div>

                      <div class="card-body">
                        <form id="formData" method="POST" action="" class="needs-validation row" novalidate="">
                          <div class="form-group col-md-2">
                            <input type="text" class="form-control required datepicker" name="start" id="start"
                              value="<%= start %>">
                          </div>
                          <div class="form-group col-md-2">
                            <input type="text" class="form-control required datepicker" name="end" id="end"
                              value="<%= end %>">
                          </div>
                          <div class="form-group col-md-2">
                            <button class="btn btn-primary" style="height: 100%;"><i class="fa fa-search"></i>
                              Search</button>
                          </div>
                        </form>
                        <table class="table table-striped table-responsive" id="tabledata" style="width:100%">
                          <thead>
                            <tr>
                              <th scope="col" width="5%">No.</th>
                              <% htitle.forEach(function(h) { if (h.onTable=="ON" ){ %>
                                <th>
                                  <%= h.label %>
                                </th>
                                <% } }) %>
                                  <th>Action</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% for (var i=0; i < datarow.length; i++) { %>
                              <tr>
                                <th scope="row">
                                  <%= i+1 %>
                                </th>
                                <td>
                                  <%= datarow[i].rangka %>
                                </td>
                                <td>
                                  <%= datarow[i].police_no %>
                                </td>
                                <td>
                                  <%= datarow[i].customer %>
                                </td>
                                <td class="text-right">
                                  <%= datarow[i].model %>
                                </td>
                                <td>
                                  <%= datarow[i].status %>
                                </td>
                                <td class="text-right">
                                  <%= datarow[i].service_order %>
                                </td>
                                <td class="text-right">
                                  <%= datarow[i].invoice_no %>
                                </td>
                                <td class="text-right">
                                  <%= datarow[i].type_repair %>
                                </td>
                                <td class="text-right">
                                  <%= datarow[i].service_advisor %>
                                </td>
                                <td>
                                  <button class="btn btn-sm btn-info"
                                    onclick="deleteFunction('<%= datarow[i].id; %>')"><i
                                      class="fas fa-trash"></i></button>
                                </td>
                              </tr>
                              <% } %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
          <%- include ../../../views/templates/footer.ejs %>
    </div>
  </div>
  <%- include ../../../views/templates/script.ejs %>
</body>

<script type="text/javascript">

  $(document).ready(function () {
    window.setTimeout(function () {
      $(".alert-autoclose").fadeTo(500, 0).slideUp(500, function () {
        $(this).remove();
      });
    }, 5000);

    $('#tabledata').DataTable({
      dom: 'Bfrtip',
      searching: true,
      paging: true,
      buttons: [
        'copy',
        {
          extend: 'print',
          title: 'Progress Status',
          orientation: 'landscape',
          pageSize: 'A4'
        },
        {
          extend: 'excel',
          title: 'Progress Status',
        },
        {
          extend: 'pdfHtml5',
          title: 'Progress Status',
          orientation: 'landscape',
          pageSize: 'A4',
          customize: function (doc) {
            doc.styles['td:nth-child(2)'] = {
              width: '100px',
              'max-width': '100px'
            }
          }
        },
      ]
    });


  });

  function deleteFunction(id) {
    console.log(id)
    swal({
      title: "Yakin Ingin Menghapus Data ini?",
      text: "Data yang dihapus, tidak bisa kembali lagi.",
      icon: "warning",
      buttons: true,
      dangerMode: true
    })
      .then((willDelete) => {
        if (willDelete) {
          let url = '<%= process.env.URL %>/progress-status/delete/' + id;
          var alertstatus = false;
          $.ajax({
            type: 'POST',
            url: url,
            dataType: 'json',
            success: function (res) {
              swal(res.titlemessage, res.message, res.success);
              location.reload();
            }
          });
        }
      });
  };
</script>

</html>